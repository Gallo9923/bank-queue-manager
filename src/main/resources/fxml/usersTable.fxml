<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="499.0" prefWidth="742.0" styleClass="section" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UsersTable">
   <top>
      <HBox alignment="CENTER" prefHeight="93.0" prefWidth="742.0">
         <children>
            <Label prefHeight="70.0" prefWidth="162.0" text="Users table" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="DejaVu Sans Bold" size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" prefHeight="270.0" prefWidth="554.0">
                     <children>
                        <TableView prefHeight="237.0" prefWidth="549.0" HBox.hgrow="ALWAYS">
                          <columns>
                            <TableColumn prefWidth="100.0" text="id" />
                            <TableColumn prefWidth="146.0" text="name" />
                              <TableColumn prefWidth="115.0" text="time" />
                              <TableColumn prefWidth="138.0" text="cash" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <VBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="74.0" prefWidth="742.0" BorderPane.alignment="CENTER">
         <children>
            <JFXButton onAction="#addNewRandomUser" prefHeight="45.0" prefWidth="163.0" styleClass="contentButton" text="Add new random user" textFill="WHITE" />
         </children>
      </HBox>
   </bottom>
   <right>
      <VBox alignment="CENTER" prefHeight="270.0" prefWidth="138.0">
         <children>
            <JFXComboBox fx:id="sortByComboBox" focusColor="#0066b1" labelFloat="true" prefHeight="26.0" prefWidth="104.0" promptText="Sort by" style="-jfx-label-float: true;" />
            <HBox alignment="CENTER" prefHeight="69.0" prefWidth="104.0" />
            <HBox alignment="CENTER" prefHeight="48.0" prefWidth="104.0">
               <children>
                  <JFXButton onAction="#sort" prefHeight="45.0" prefWidth="106.0" styleClass="contentButton" text="Apply" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </right>
</BorderPane>
